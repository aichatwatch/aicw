test/
tests/
*.test.js
*.test.ts
*.spec.js
*.spec.ts
seo_test_log.txt
test-regex.js
__tests__/
coverage/
.nyc_output/

# User data directories (NEVER include user data)
data/projects/
data/OUTPUT/
data/reports/
data/clients/
data/*.md
!data/templates/

# Development environment files
.env
.env.*
.env.local
.env.development
.env.test
.env.production

